<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tb_info_box"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15pt"
        android:text=""/>


    <LinearLayout
        android:weightSum="1"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_default_broadcast"
                android:text="Default Broadcast"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="6pt"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="SendDefaultBroadcast"/>

            <Button
                android:id="@+id/button_modified_broadcast"
                android:text="Encrypted Broadcast"
                android:textColor="@android:color/white"
                android:textSize="6pt"
                android:layout_weight="0.5"
                android:backgroundTint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="SendModifiedBroadcast"/>


        </LinearLayout>




</RelativeLayout>